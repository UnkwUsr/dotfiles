[global]
    # gap between two notifications
    separator_height = 5

    # padding between content and borders
    padding = 10
    horizontal_padding = 10
    # padding around notification window
    frame_width = 0

    font = Monospace 13

    # merge multiple notifications with the same content
    stack_duplicates = false

# hide simplex-desktop notifications
[skip-rule-simplex]
body=new message
icon=dialog-information
skip_display=true

