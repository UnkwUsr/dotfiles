; vim: ft=gitconfig
[init]
    defaultBranch = master
[commit]
    verbose = true
[merge]
    ff = true
[am]
    threeWay = true
[rebase]
    # show missed commits after rebase
    missingCommitsCheck = warn
    # auto squash marked commits ("fixup!", etc.)
    autoSquash = true

[alias]
    s = status -sb
    st = status
    l = log
    ll = log --all
    lp = log -p
    c = checkout
    cb = checkout -b
    b = branch
    cam = commit --amend
    ri = rebase -i
    rco = rebase --continue
    roc = rebase --continue
    rab = rebase --abort
    d = diff
    ds = diff --staged
    ref = reflog --date=relative
    unstage = restore --staged

    # see also: ~/.bin/git-fxa

# setup diff-so-fancy
[core]
    pager = diff-so-fancy | less --tabs=4 -R
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = cyan bold
    old = red bold
    new = green bold
    whitespace = red reverse
