; vim: ft=gitconfig
[init]
    defaultBranch = master
[commit]
    verbose = true
[merge]
    ff = true
[rebase]
    missingCommitsCheck = warn
    autoSquash = true

[alias]
    s = status -sb
    st = status
    l = log
    ll = log --all
    lp = log -p
    c = checkout
    cb = checkout -b
    b = branch
    cam = commit --amend
    d = diff
    ds = diff --staged
    ref = reflog --date=relative

    # create fixup commit with commit picked with fzf
    fxa = !git diff --staged --quiet \
        && echo nothing staged \
        || git log --pretty=oneline --abbrev-commit origin..HEAD \
            | fzf --preview='git show --color=always {1}' \
            | cut -d' ' -f1 | xargs git commit --fixup

[core]
    pager = diff-so-fancy | less --tabs=4 -R
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = cyan bold
    old = red bold
    new = green bold
    whitespace = red reverse
