; vim: ft=gitconfig
[init]
    defaultBranch = master
[commit]
    verbose = true
[merge]
    ff = true
[am]
    threeWay = true
[rebase]
    # show missed commits after rebase
    missingCommitsCheck = warn
    # auto squash marked commits ("fixup!", etc.)
    autoSquash = true
[fetch]
    # performance boost
    writeCommitGraph = true

[alias]
    # P.S. hacking with stash because `--show-stash` not work with `--short``
    s = "!cd \"$GIT_PREFIX\" && git status -sb $@ && (git stash list | cut -d: -f1) #"
    st = status
    sh = show --stat --patch
    l = log
    ll = log --all
    lp = log -p
    c = checkout
    cb = checkout -b
    b = branch
    cam = commit --amend
    ri = rebase -i
    rco = rebase --continue
    roc = rebase --continue
    rab = rebase --abort
    cp = cherry-pick
    d = diff
    ds = diff --staged
    ref = reflog --date=relative
    # reflog but with hidden some rebase actions
    refs = "!git -c color.ui=always ref | rg -v 'rebase \\(pick\\)' | rg -v 'rebase: fast-forward' | less #"
    unstage = restore --staged

    # to unshallow: git fetch --unshallow
    # to restore branches: git remote set-branches origin '*'
    clown = clone --depth 1

    # see also: ~/.bin/git-fxa

# setup diff-so-fancy
[core]
    pager = diff-so-fancy | less --tabs=4 -R
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = cyan bold
    old = red bold
    new = green bold
    whitespace = red reverse

[diff]
    colorMoved = default
    colorMovedWS = allow-indentation-change
