# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = i3bar
    colors = true
    interval = 5
}


order += "cpu_usage"
order += "memory"
order += "volume master_sink_default"
order += "volume capture_source_default"
order += "tztime local"


tztime local {
    format = "%d.%m %a %I:%M%P"
}

cpu_usage {
    format = "%usage"
}

volume master_sink_default {
    format = ": %volume"
    format_muted = ": muted (%volume)"
    device = "pulse:sink"
}

volume capture_source_default {
    format = ": %volume%"
    format_muted = ": muted (%volume)"
    device = "pulse:source"
}

volume master {
    format = "vol: %volume"
    format_muted = "vol: (mut)%volume"
    device = "pulse:alsa_output.usb-C-Media_Electronics_Inc._USB_Advanced_Audio_Device-00.analog-stereo"
}

memory {
    format = "%used"
}
