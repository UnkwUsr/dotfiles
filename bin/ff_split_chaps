#!/bin/sh -ef
#
# split video/audio by chapters into separate files
#
# original source: https://stackoverflow.com/a/53553938/17940925
# edited by me

if [ -z "$1" ]; then
    echo "Usage: $0 path/to/media_file"
    exit 1
fi

input="$1"
ffprobe \
    -hide_banner \
    -print_format csv \
    -show_chapters \
    "$input" |
    cut -d ',' -f '5,7,8-' |
    tr '/' '-' | tr -d '"' |
    nl -n rz -w 2 -s ',' |
    while IFS=, read -r i start end chapter
    do
        ffmpeg \
            -hide_banner \
            -nostdin \
            -ss "$start" -to "$end" \
            -i "$input" \
            -c copy \
            -map 0 \
            -map_chapters -1 \
            "${i}_${input%.*}-$chapter.${input##*.}"
    done
