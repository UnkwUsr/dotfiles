#!/bin/bash

parecord -d @DEFAULT_SOURCE@ /tmp/dmictest.wav &
parecord_pid=$!
dstatus set "*recording microphone*"
dstatus wait

kill -INT $parecord_pid

(2>/dev/null 1>/dev/null mpv /tmp/dmictest.wav && dstatus stop) &
dstatus set "*playing recorded file*"
dstatus wait

ps | rg mpv | awk '{print $1}' | xargs -r kill -INT

