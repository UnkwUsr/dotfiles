[commit]
    verbose = true
[alias]
    s = status -sb
    l = log
    c = checkout
    lp = log -p
    d = diff
    ds = diff --staged
[core]
    pager = diff-so-fancy | less --tabs=4 -R
    excludesfile = ~/.globalgitignore
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = cyan bold
    old = red bold
    new = green bold
    whitespace = red reverse
